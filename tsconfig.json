{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2016",
      "dom"
    ]
  }
}